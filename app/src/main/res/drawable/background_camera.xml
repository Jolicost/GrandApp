<?xml version="1.0" encoding="utf-8"?><!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/grey_light_1" />
                    <corners android:radius="4dp" />
                </shape>
            </item>


            <item
                android:right="20dp"
                android:left="20dp"
                android:bottom="20dp"
                android:top="20dp"
                android:drawable="@drawable/ic_camera_alt_black_24dp"></item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/selectedBtnLigh" />
                    <corners android:radius="4dp" />
                </shape>
            </item>

            <item
                android:right="18dp"
                android:left="18dp"
                android:bottom="18dp"
                android:top="18dp"
                android:drawable="@drawable/ic_camera_alt_black_24dp"></item>
        </layer-list>
    </item>
</selector>