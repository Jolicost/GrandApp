<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="45" android:endColor="@color/color_gradient_button_end_dark" android:startColor="@color/color_gradient_button_start_dark" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="45" android:endColor="@color/color_gradient_button_end" android:startColor="@color/color_gradient_button_start" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>